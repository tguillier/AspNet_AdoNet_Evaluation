@model AspNet_AdoNet_Evaluation.Models.CurrencyConverterConfiguration

@{
    ViewData["Title"] = "Index";
}

<h2>Exercice 2</h2>

<h4>Currency Converter Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control form-inline" placeholder="Type an amount (eg. 100)" />
                <span asp-validation-for="Amount" class="text-danger"></span>
                @Html.DropDownListFor(model => model.CurrencyFrom, Html.GetEnumSelectList<Currency>(), htmlAttributes: new { @class = "form-control form-inline" })
                <span asp-validation-for="CurrencyFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyTo" class="control-label"></label>
                @Html.DropDownListFor(model => model.CurrencyTo, Html.GetEnumSelectList<Currency>(), htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="CurrencyTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Try it now" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
